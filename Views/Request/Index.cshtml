@model IEnumerable<RMC_Donation.Models.RequestItemWithUserAndItemViewModel>

@{
    ViewBag.Title = "My Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Requests</h2>

<table class="table">
    <tr>
        <th>
            Receiver
        </th>
        <th>
            Item
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestItem.approved_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestItem.status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.name)
            </td>
            <td>
                @{
                    string statusText = "";
                    if (item.RequestItem.status == 0)
                    {
                        statusText = "Canceled";
                    }
                    else if (item.RequestItem.status == 1)
                    {
                        switch (item.RequestItem.approved_status)
                        {
                            case 2:
                                statusText = "Pending";
                                break;
                            case 1:
                                statusText = "Approved";
                                break;
                            case 0:
                                statusText = "Rejected";
                                break;
                            default:
                                break;
                        }
                    }
                }
                @statusText
            </td>
            <td>
                <input type="checkbox" data-id="@item.RequestItem.id" @(item.RequestItem.status == 1 ? "checked" : "") />
            </td>
        </tr>
    }
</table>


@section scripts {
    <script>
        $(document).ready(function () {
            // Handle checkbox change event
            $('input[type="checkbox"]').change(function () {
                var itemId = $(this).data('id');
                var isChecked = $(this).prop('checked');

                // Send an AJAX request to update the status
                $.ajax({
                    url: '/Request/UpdateRequestStatus', // Replace with your actual update action
                    type: 'POST',
                    data: { id: itemId, isChecked: isChecked },
                    success: function (result) {
                        // Handle success, if needed
                    },
                    error: function () {
                        // Handle error, if needed
                    }
                });
            });
        });
    </script>
}
